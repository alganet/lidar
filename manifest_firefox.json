{
    "manifest_version": 2,
    "name": "Lidar",
    "description": "Create rules to automatically scrape websites as you browse.",
    "version": "0.1.0",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "browser_action": {
        "default_title": "Lidar - Click to open panel",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png"
        }
    },
    "permissions": [
        "activeTab",
        "storage",
        "tabs",
        "<all_urls>"
    ],
    "background": {
        "scripts": [
            "src/db.js",
            "src/badge.js",
            "src/background.js"
        ],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "src/messaging.js",
                "src/rules.js",
                "src/scraping.js",
                "src/autoapply.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "web_accessible_resources": [
        "src/panel.html",
        "src/panel.css",
        "icons/sprites.svg"
    ],
    "browser_specific_settings": {
        "gecko": {
            "id": "lidar-ext@alganet.github.io",
            "strict_min_version": "142.0",
            "data_collection_permissions": {
                "required": [
                    "websiteContent",
                    "websiteActivity"
                ]
            }
        }
    }
}