{
    "manifest_version": 2,
    "name": "Lidar",
    "description": "Visual data scraper with reusable rules - like Pocket meets web scraping",
    "version": "1.0.0",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "browser_action": {
        "default_title": "Lidar - Click to open panel",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png"
        }
    },
    "permissions": [
        "activeTab",
        "storage",
        "tabs",
        "<all_urls>"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "autoapply.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "web_accessible_resources": [
        "panel.html",
        "panel.css",
        "icons/sprites.svg"
    ]
}